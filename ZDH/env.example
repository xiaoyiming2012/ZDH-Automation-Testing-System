# Windows自动化测试系统环境变量配置

# Claude API配置
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229

# 数据库配置
DATABASE_URL=sqlite:///data/test_system.db

# 文件存储路径
DATA_BASE_PATH=./data
SCREENSHOTS_PATH=./data/screenshots
LOGS_PATH=./data/logs
TEMPLATES_PATH=./data/templates
REPORTS_PATH=./data/reports

# 服务配置
HOST=127.0.0.1
PORT=8089
DEBUG=false

# 安全配置
SANDBOX_ENABLED=true
ADMIN_CONFIRMATION_REQUIRED=true
AUDIT_LOG_LEVEL=INFO

# 监控配置
MONITORING_ENABLED=true
METRICS_INTERVAL=60
ALERTS_ENABLED=false

# 测试配置
MAX_WORKERS=4
MAX_CONCURRENT_TESTS=2
TEST_TIMEOUT=300
STEP_TIMEOUT=60

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./data/logs/test_system.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
